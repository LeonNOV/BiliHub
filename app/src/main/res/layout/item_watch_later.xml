<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="@dimen/videoCoverWidth"
        android:layout_height="@dimen/videoCoverHeight">

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/CoverStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/lsp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="6dp"
            android:background="@drawable/video_item_extra_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="02:49/39P" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            style="@style/VideoTitleStyle"
            tools:text="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitle" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_up_user"
                android:drawablePadding="5dp"
                android:textColor="@color/infoColor"
                android:textSize="@dimen/infoSize"
                tools:text="1234" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_video_play"
                    android:drawablePadding="5dp"
                    android:textColor="@color/infoColor"
                    android:textSize="15sp"
                    tools:text="4.7ä¸‡" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/danmaku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_danmaku"
                    android:drawablePadding="5dp"
                    android:textColor="@color/infoColor"
                    android:textSize="15sp"
                    tools:text="106" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>