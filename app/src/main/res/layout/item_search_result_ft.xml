<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ItemStyle"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="128dp"
        android:layout_height="164dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/Cover"
            tools:src="@drawable/lsp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:background="@drawable/item_video_badge_bg"
            android:backgroundTint="#00c0ff"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:visibility="gone"
            tools:text="独家"
            tools:visibility="visible" />

        <!--            <androidx.appcompat.widget.AppCompatTextView-->
        <!--                android:id="@+id/epStatus"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_gravity="end|bottom"-->
        <!--                android:layout_margin="5dp"-->
        <!--                android:textColor="#FFFFFF"-->
        <!--                android:textSize="15sp"-->
        <!--                android:visibility="gone"-->
        <!--                tools:text="更新至艺人摇身一变更惊人（下）"-->
        <!--                tools:visibility="visible" />-->

    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/seasonType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_media_type_bg"
                android:paddingStart="7dp"
                android:paddingTop="2dp"
                android:paddingEnd="7dp"
                android:paddingBottom="2dp"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                tools:text="纪录片" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="纪录片纪录片纪录片纪录片纪录片" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/infoColor"
            android:textSize="11sp"
            android:layout_marginBottom="10dp"
            tools:text="人文|2018|中国大陆" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/infoColor"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="制作团队：DescDescDescDescDescDescDDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDesc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/infoColor"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="出演：DescDescDescDescDescDescDDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDesc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/infoColor"
            android:textSize="11sp"
            tools:text="简介：DescDescDescDescDescDescDDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDescDesc" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ratingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ratingScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffa058"
                android:textSize="27sp"
                android:textStyle="bold"
                tools:text="8.8" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/pgc_bangumi_score"
                android:textColor="#ffa058"
                android:textSize="11sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ratingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingScore"
            android:layout_centerHorizontal="true"
            android:textSize="11sp"
            tools:text="6881人评分" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>