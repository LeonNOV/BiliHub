<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Cover" parent="VideoCoverSingle"/>

    <style name="VideoCoverSingle">
        <item name="cornerFamily">rounded</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cornerSize">@dimen/corner</item>
    </style>

    <style name="VideoCoverDouble">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner</item>
        <item name="cornerSizeTopRight">@dimen/corner</item>
    </style>

    <style name="PictureItemStyle">
        <item name="cornerFamily">rounded</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="cornerSize">@dimen/corner_picture</item>
    </style>
</resources>