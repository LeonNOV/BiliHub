<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- PictureViewer动画 -->
    <style name="paning_anim_style">
        <!-- 进入 -->
        <item name="android:windowEnterAnimation">@anim/picture_viewer_enter</item>

        <!-- 退出 -->
        <item name="android:windowExitAnimation">@anim/picture_viewer_exit</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/tabLayout_size</item>
    </style>

    <!-- X轴靠右进出动画 -->
    <style name="TranslateRightAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_right_enter</item>
        <item name="android:windowExitAnimation">@anim/translate_right_exit</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="UserData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/infoColor</item>
    </style>

    <style name="BackStyle">
        <item name="android:layout_width">@dimen/topBarBackWH</item>
        <item name="android:layout_height">@dimen/topBarBackWH</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/topBarBackPadding</item>
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="DrawerFunctionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_drawer_function</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PartitionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_bg_a</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/partition_title_size</item>
    </style>

    <style name="DataListDefaultFilterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/infoColor</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicator">@drawable/indicator</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorColor">@color/theme_tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="ItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/ripple_bg</item>
    </style>

    <style name="CoverStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearance">@style/Cover</item>
    </style>

    <style name="VideoTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PointerStyle">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:src">@drawable/pointer</item>
    </style>

    <style name="FilterItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_bg</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/filterItemSize</item>
        <item name="android:textColor">@color/infoColor</item>
    </style>

    <!-- 去掉BottomSheetDialog背部阴影 -->
    <style name="BottomSheetDialogBg" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>